<% if current_user.nil? %>
<div class="container text-center m-auto ">
    <h2 class="m-auto">connectes-toi</h2>
</div>
<% else %>
    <div class="container align-items-center">
        <h1 class="my-2 text-center">Liste des Participants par entrainement</h1>
        <div class="d-flex">
        <% @trainings.each do |training| %>
            <div class="d-flex flex-column card">
            <h2>Signature: <%= training.participants.size %></h2>
                <h2><%= training.date.time.to_formatted_s(:short) %></h2>
                <% training.participants.each do |participant| %>
                    <h3><%= participant.user.nom %> <%= participant.user.prenom %></h3>
                <% end %>
            </div>
        <% end %>
        </div>        
    </div>
<% end %>

